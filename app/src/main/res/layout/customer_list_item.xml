<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_customer_list"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="1"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_company_list"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="2"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/item_adress_list"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_adress_list"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="3"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/item_tell_list"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_tell_list"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="4"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/item_email_list"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_email_list"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="5"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/item_seller_list"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_seller_list"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="6"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/item_ein_list"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/item_ein_list"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:text="7"
            android:textAlignment="viewStart"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageViewCustomerDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_delete" />

        <ImageView
            android:id="@+id/imageViewCustomerCheck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_baseline_check" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>